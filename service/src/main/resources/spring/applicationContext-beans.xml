	<bean id="secureAccountDAO" class="com.inthinc.pro.util.SecureAccountDAO">
		<property name="accountDAO" ref="accountDAO" />
	</bean>
	<bean id="secureAddressDAO" class="com.inthinc.pro.util.SecureAddressDAO">
		<property name="addressDAO" ref="addressDAO" />
	</bean>
	<bean id="secureDeviceDAO" class="com.inthinc.pro.util.SecureDeviceDAO">
		<property name="deviceDAO" ref="deviceDAO" />
	</bean>
	<bean id="secureGroupDAO" class="com.inthinc.pro.util.SecureGroupDAO">
		<property name="groupDAO" ref="groupDAO" />
		<property name="groupReportDAO" ref="groupReportDAO" />
	</bean>
	<bean id="securePersonDAO" class="com.inthinc.pro.util.SecurePersonDAO">
		<property name="personDAO" ref="personDAO" />
		<property name="addressDAO" ref="secureAddressDAO" />
	</bean>
	<bean id="secureDriverDAO" class="com.inthinc.pro.util.SecureDriverDAO">
		<property name="driverDAO" ref="driverDAO" />
		<property name="driverReportDAO" ref="driverReportDAO" />
		<property name="eventDAO" ref="eventDAO" />
		<property name="groupDAO" ref="secureGroupDAO" />
		<property name="personDAO" ref="securePersonDAO" />
	</bean>
	<bean id="secureUserDAO" class="com.inthinc.pro.util.SecureUserDAO">
		<property name="userDAO" ref="userDAO" />
		<property name="groupDAO" ref="secureGroupDAO" />
		<property name="personDAO" ref="securePersonDAO" />
	</bean>
	<bean id="secureVehicleDAO" class="com.inthinc.pro.util.SecureVehicleDAO">
		<property name="vehicleDAO" ref="vehicleDAO" />
		<property name="vehicleReportDAO" ref="vehicleReportDAO" />
		<property name="mpgDAO" ref="mpgDAO" />
		<property name="driverDAO" ref="secureDriverDAO" />
		<property name="groupDAO" ref="secureGroupDAO" />
		<property name="deviceDAO" ref="secureDeviceDAO" />
	</bean>

	<bean id="accountService" class="com.inthinc.pro.service.impl.AccountServiceImpl">
		<property name="dao" ref="secureAccountDAO" />
	</bean>
	<bean id="addressService" class="com.inthinc.pro.service.impl.AddressServiceImpl">
		<property name="dao" ref="secureAddressDAO" />
	</bean>
	<bean id="deviceService" class="com.inthinc.pro.service.impl.DeviceServiceImpl">
		<property name="dao" ref="secureDeviceDAO" />
	</bean>
	<bean id="driverService" class="com.inthinc.pro.service.impl.DriverServiceImpl">
		<property name="dao" ref="secureDriverDAO" />
	</bean>
	<bean id="groupService" class="com.inthinc.pro.service.impl.GroupServiceImpl">
		<property name="dao" ref="secureGroupDAO" />
	</bean>
	<bean id="personService" class="com.inthinc.pro.service.impl.PersonServiceImpl">
		<property name="dao" ref="securePersonDAO" />
	</bean>
	<bean id="userService" class="com.inthinc.pro.service.impl.UserServiceImpl">
		<property name="dao" ref="secureUserDAO" />
	</bean>
	<bean id="vehicleService" class="com.inthinc.pro.service.impl.VehicleServiceImpl">
		<property name="dao" ref="secureVehicleDAO" />
		<property name="addressLookup" ref="geonamesAddressLookupBean" />
	</bean>
	<bean id="voiceService" class="com.inthinc.pro.service.voicexml.VoiceServiceImpl">
		<property name="voxeoAudioURL" value="${voxeoAudioURL}" />
		<property name="alertMessageDAO" ref="alertMessageDAO" />
	</bean>
	<bean id="voiceAckService" class="com.inthinc.pro.service.voicexml.VoiceAckServiceImpl">
		<property name="voxeoAudioURL" value="${voxeoAudioURL}" />
		<property name="alertMessageDAO" ref="alertMessageDAO" />
	</bean>
	
	<bean id="cellPhoneService" class="com.inthinc.pro.service.phonecontrol.impl.CellPhoneServiceImpl">
		<property name="driverDAO" ref="driverDAO"/>
	</bean>
