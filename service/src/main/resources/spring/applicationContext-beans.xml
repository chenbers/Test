	<!-- Phone control autowiring configuration -->
	<context:component-scan base-package="com.inthinc.pro.service.phonecontrol" />

	<!-- Phone control adapter factory configuration -->
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	<!-- Cell Control -->
	<bean id="cellcontrolHttpConnection" class="com.inthinc.pro.service.phonecontrol.client.HttpClientFactoryBean">
		<property name="host" value="${cellcontrol.service.host}" />
		<property name="port" value="${cellcontrol.service.port}" />
		<property name="username" value="${cellcontrol.service.username}" />
		<property name="password" value="${cellcontrol.service.password}" />
	</bean>
	<bean id="cellcontrolClientEndpoint"
		class="org.jboss.resteasy.client.spring.RestClientProxyFactoryBean">
		<property name="httpClient" ref="cellcontrolHttpConnection" />
		<property name="serviceInterface" value="com.inthinc.pro.service.phonecontrol.client.CellcontrolEndpoint" />
		<property name="baseUri" value="http://${cellcontrol.service.host}" />
	</bean>
	<!-- Zoom Safer -->
	<bean id="systemClock" class="com.inthinc.pro.service.phonecontrol.impl.SystemClock"/>
	<bean id="zoomsaferHttpConnection" class="com.inthinc.pro.service.phonecontrol.client.HttpClientFactoryBean">
		<property name="host" value="${zoomsafer.service.host}" />
		<property name="port" value="${zoomsafer.service.port}" />
		<property name="username" value="${zoomsafer.service.username}" />
		<property name="password" value="${zoomsafer.service.password}" />
	</bean>
	<bean id="zoomsaferClientEndpoint"
		class="org.jboss.resteasy.client.spring.RestClientProxyFactoryBean">
		<property name="httpClient" ref="zoomsaferHttpConnection" />
		<property name="serviceInterface" value="com.inthinc.pro.service.phonecontrol.client.ZoomsaferEndPoint" />
		<property name="baseUri" value="http://${zoomsafer.service.host}" />
	</bean>
	<bean id="phoneControlAdapterFactory"
		class="com.inthinc.pro.service.phonecontrol.impl.DefaultPhoneControlAdapterFactory">
		<property name="factoryMap">
			<map>
				<entry>
					<key><value>CELL_CONTROL</value></key>
					<bean
						class="com.inthinc.pro.service.phonecontrol.impl.CellcontrolAdapter">
						<constructor-arg ref="cellcontrolClientEndpoint" />
					</bean>
				</entry>
				<entry>
					<key><value>ZOOM_SAFER</value></key>
					<bean class="com.inthinc.pro.service.phonecontrol.impl.ZoomsaferAdapter">
					    <constructor-arg type="com.inthinc.pro.service.phonecontrol.client.ZoomsaferEndPoint" ref="zoomsaferClientEndpoint"/>
					    <constructor-arg type="com.inthinc.pro.service.phonecontrol.Clock" ref="systemClock"/>
					</bean>
				</entry>
			</map>
		</property>
	</bean>

	<bean id="propertyPlaceholderConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="ignoreResourceNotFound" value="true" />
		<property name="locations">
			<list>
				<value>classpath:tiwipro.properties</value>
				<value>file:${CATALINA_HOME}/conf/tiwipro.properties</value>
			</list>
		</property>
	</bean>


	<!-- Global Application Context (singleton scoped) beans -->
	<!--
		<bean id="roles" class="com.inthinc.pro.model.app.Roles"
		init-method="init">
	-->
	<!--    <property name="roleDAO" ref="roleDAO"></property>-->
