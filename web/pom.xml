    <groupId>com.inthinc.pro.web</groupId>
    <artifactId>web</artifactId>
    <version>0.0.12</version>
    <packaging>war</packaging>
    <name>Pro Portal - Web App</name>
    <profiles>
        <profile>
            <id>local</id>
            <activation>
                <property>
                    <name>env</name>
                    <value>local</value>
                </property>
            </activation>
            <properties>
                <facelets.development>true</facelets.development>
                <tomcatManagerURL>http://localhost:9091/manager</tomcatManagerURL>
                <tomcatServerID>dev-pro-tomcat</tomcatServerID>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>${basedir}/src/main/resources</directory>
                        <excludes>
                            <exclude>**/applicationContext-mockdao.xml</exclude>
                            <exclude>**/applicationContext-serverPropertiesRemote.xml</exclude>
                        </excludes>
                    </resource>
                </resources>
            </build>
        </profile>
        <profile>
            <id>mock</id>
            <activation>
                <property>
                    <name>env</name>
                    <value>mock</value>
                </property>
            </activation>
            <properties>
                <facelets.development>true</facelets.development>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>${basedir}/src/main/resources</directory>
                        <excludes>
                            <exclude>**/applicationContext-dao.xml</exclude>
                            <exclude>**/applicationContext-serverPropertiesRemote.xml</exclude>
                        </excludes>
                    </resource>
                </resources>
            </build>
        </profile>
        <profile>
            <id>development</id>
            <activation>
                <property>
                    <name>env</name>
                    <value>dev</value>
                </property>
            </activation>
            <properties>
                <facelets.development>true</facelets.development>
                <tomcatManagerURL>http://dev-pro.inthinc.com:8081/manager</tomcatManagerURL>
                <tomcatServerID>dev-pro-tomcat</tomcatServerID>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>${basedir}/src/main/resources</directory>
                        <excludes>
                            <exclude>**/applicationContext-mockdao.xml</exclude>
                            <exclude>**/applicationContext-serverPropertiesLocal.xml</exclude>
                        </excludes>
                    </resource>
                </resources>
            </build>
        </profile>
        <profile>
            <id>qa</id>
            <activation>
                <property>
                    <name>env</name>
                    <value>qa</value>
                </property>
            </activation>
            <properties>
                <facelets.development>true</facelets.development>
                <tomcatManagerURL>http://qa-pro.inthinc.com:8082/manager</tomcatManagerURL>
                <tomcatServerID>qa-pro-tomcat</tomcatServerID>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>${basedir}/src/main/resources</directory>
                        <excludes>
                            <exclude>**/applicationContext-mockdao.xml</exclude>
                            <exclude>**/applicationContext-serverPropertiesLocal.xml</exclude>
                        </excludes>
                    </resource>
                </resources>
            </build>
        </profile>
        <profile>
            <id>production</id>
            <activation>
                <property>
                    <name>env</name>
                    <value>prod</value>
                </property>
            </activation>
            <properties>
                <facelets.development>false</facelets.development>
            </properties>
            <build>
                <resources>
                    <resource>
                        <directory>${basedir}/src/main/resources</directory>
                        <excludes>
                            <exclude>**/applicationContext-mockdao.xml</exclude>
                            <exclude>**/applicationContext-serverPropertiesLocal.xml</exclude>
                        </excludes>
                    </resource>
                </resources>
            </build>
        </profile>
    </profiles>
