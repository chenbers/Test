  <!--                     -->
  <!-- Plugin Repositories -->
  <!--                     -->
  <pluginRepositories>
    <pluginRepository>
      <id>central</id>
      <url>https://testteen.iwiglobal.com:8482/artifactory/repo</url>
      <snapshots>
        <enabled>false</enabled>
      </snapshots>
    </pluginRepository>
    <pluginRepository>
      <id>snapshots</id>
      <url>https://testteen.iwiglobal.com:8482/artifactory/snapshots</url>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
      <releases>
