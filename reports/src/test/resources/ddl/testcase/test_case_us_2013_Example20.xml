        <hos_state state="occupant_on_duty" hours="4" />				
        <hos_state state="driving" hours="3" />				
        <hos_state state="off_duty" hours="1" />				
        <hos_state state="driving" hours="5" />				
        <hos_state state="on_duty" hours="1" />				
        <hos_state state="driving" hours="1" />				
	</result>
